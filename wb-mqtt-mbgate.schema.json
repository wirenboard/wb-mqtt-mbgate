{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "MQTT to Modbus TCP and RTU slave gateway configuration",
    "description": "mbgate_schema_description",
    "configFile": {
        "path": "/etc/wb-mqtt-mbgate.conf",
        "service": "wb-mqtt-mbgate",
        "needReload": true
    },
    "definitions": {
        "reg_common": {
            "type": "object",
            "headerTemplate": "Channel {{self.topic}}",
            "_format": "grid",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "title": "Enabled",
                    "propertyOrder": 1,
                    "_format": "checkbox"
                },
                "topic": {
                    "type": "string",
                    "title": "MQTT Device (from topic name)",
                    "propertyOrder": 10,
                    "options": {
                        "input_width": "300px",
                        "wb": {
                            "data": "devices"
                        }
                    },
                    "format": "wb-autocomplete"
                },
                // Meta-type is only for reference, don't change it in editor
                "meta_type": {
                    "type": "string",
                    "title": "Meta-type",
                    "readOnly": true,
                    "propertyOrder": 11
                },
                "unitId": {
                    "type": "integer",
                    "title": "Modbus unit ID",
                    "minimum": 1,
                    "maximum": 255,
                    "propertyOrder": 20
                },
                "address": {
                    "type": "integer",
                    "title": "Start address",
                    "minimum": 0,
                    "maximum": 65535,
                    "propertyOrder": 30
                }
            },
            "required": ["unitId", "address", "topic"]
        },
        "reg_format": {
            "$ref": "#/definitions/reg_common",
            "properties": {
                // TODO: global description for types and formats
                "format": {
                    "type": "string",
                    "enum": ["signed", "unsigned", "bcd", "float", "varchar"],
                    "title": "Register format",
                    "options": {
                        "enum_titles": [
                            "Signed integer",
                            "Unsigned integer",
                            "BCD",
                            "IEEE754 float",
                            "Varchar (fixed size string)"
                        ]
                    },
                    "propertyOrder": 40
                },
                "size": {
                    "type": "integer",
                    "title": "Size",
                    "description": "Set size in bytes (in registers for text)",
                    "minimum": 0,
                    "propertyOrder": 50
                },
                "max": {
                    "type": "integer",
                    "title": "Maximum value",
                    "description": "for range metatype, > 0",
                    "propertyOrder": 60
                },
                "scale": {
                    "type": "number",
                    "title": "Value scale",
                    "description": "value will be multiplied by this before convertion",
                    "propertyOrder": 70
                },
                "byteswap": {
                    "type": "boolean",
                    "title": "Byte swap",
                    "description": "little-endian for bytes in words",
                    //"description": "Write bytes in words in little-endian (default is big-endian)",
                    "default": false,
                    "_format": "checkbox",
                    "propertyOrder": 80
                },
                "wordswap": {
                    "type": "boolean",
                    "title": "Word swap",
                    "description": "little-endian for words",
                    //"description": "Write complex (multi-register) values in \"little-endian\" (least significant word first)",
                    "default": false,
                    "_format": "checkbox",
                    "propertyOrder": 90
                }
            },
            "required": ["format", "size"]
        },
        "tcp": {
            "title": "TCP",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string",
                    "title": "Port type",
                    "enum": ["tcp"],
                    "default": "tcp",
                    "propertyOrder": 1,
                    "options": {
                        "hidden": true,
                        "forceDefault": true
                    }
                },
                "host": {
                    "type": "string",
                    "title": "Bind address",
                    "description": "IP address or hostname to bind gateway to",
                    "default": "*",
                    "propertyOrder": 20,
                    "options": {
                        "grid_columns": 10
                    }
                },
                "port": {
                    "type": "integer",
                    "title": "Server TCP port",
                    "description": "TCP port number to bing gateway to",
                    "default": 502,
                    "minimum": 1,
                    "maximum": 65535,
                    "propertyOrder": 30,
                    "options": {
                        "grid_columns": 2
                    }
                }
            },
            "required": ["host", "port"],
            "options": {
                "disable_properties": true,
                "disable_collapse": true,
                "disable_edit_json": true
            }
        },
        "rtu": {
            "title": "RTU",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string",
                    "title": "Port type",
                    "enum": ["rtu"],
                    "default": "rtu",
                    "propertyOrder": 1,
                    "options": {
                        "hidden": true,
                        "forceDefault": true
                    }
                },
                "path": {
                    "type": "string",
                    "title": "Path to device",
                    "minLength": 1,
                    "propertyOrder": 1
                },
                "baud_rate": {
                    "type": "integer",
                    "title": "Baud rate",
                    "enum": [110, 300, 600, 1200, 2400, 4800, 9600, 19200, 38400, 57600, 115200],
                    "default": 9600,
                    "propertyOrder": 3
                },
                "parity": {
                    "type": "string",
                    "title": "Parity",
                    "enum": ["N", "E", "O"],
                    "default": "N",
                    "propertyOrder": 4
                },
                "data_bits": {
                    "type": "integer",
                    "title": "Data bits",
                    "enum": [5, 6, 7, 8],
                    "default": 8,
                    "propertyOrder": 5
                },
                "stop_bits": {
                    "type": "integer",
                    "title": "Stop bits",
                    "enum": [1, 2],
                    "default": 1,
                    "propertyOrder": 5
                }
            },
            "required": ["path"],
            "options": {
                "disable_properties": true,
                "disable_collapse": true,
                "disable_edit_json": true
            }
        }
    },
    "properties": {
        "regenerate_config": {
            "type": "boolean",
            "title": "Regenerate config",
            "description": "regenerate_config_description",
            "default": false,
            "_format": "checkbox",
            "propertyOrder": 5
        },
        "debug": {
            "type": "boolean",
            "title": "Enable debug logging",
            "default": false,
            "_format": "checkbox",
            "propertyOrder": 10
        },
        "modbus": {
            "title": "Modbus binding",
            "oneOf": [
                {
                    "$ref": "#/definitions/tcp"
                },
                {
                    "$ref": "#/definitions/rtu"
                }
            ],
            "options": {
                "keep_oneof_values": false
            },
            "propertyOrder": 20,
            "_format": "grid"
        },
        "mqtt": {
            "type": "object",
            "title": "MQTT connection",
            "properties": {
                "host": {
                    "type": "string",
                    "title": "Address",
                    "description": "Broker address",
                    "default": "localhost",
                    "propertyOrder": 10,
                    "options": {
                        "grid_columns": 10
                    }
                },
                "port": {
                    "type": "integer",
                    "title": "Port",
                    "description": "Broker port",
                    "default": 1883,
                    "minimum": 0,
                    "maximum": 65535,
                    "propertyOrder": 20,
                    "options": {
                        "grid_columns": 2
                    }
                },
                "keepalive": {
                    "type": "integer",
                    "title": "Keep-alive interval",
                    "description": "keepalive_description",
                    "default": 60,
                    "propertyOrder": 25,
                    "options": {
                        "grid_columns": 12
                    }
                },
                "auth": {
                    "type": "boolean",
                    "title": "Enable username+password authentification",
                    "default": false,
                    "_format": "checkbox",
                    "propertyOrder": 30,
                    "options": {
                        "grid_columns": 12
                    }
                },
                "username": {
                    "type": "string",
                    "title": "Login",
                    "propertyOrder": 40
                },
                "password": {
                    "type": "string",
                    "title": "Password",
                    "_format": "password",
                    "propertyOrder": 50
                }
            },
            "required": ["host", "port"],
            "propertyOrder": 35,
            "options": {
                "disable_collapse": true,
                "disable_edit_json": true
            },
            "_format": "grid"
        },
        "registers": {
            "type": "object",
            "title": "Register bindings",
            "propertyOrder": 40,
            "properties": {
                "remap_values": {
                    "type": "boolean",
                    "title": "Remap addresses after edit",
                    "description": "remap_values_description",
                    "default": false,
                    "_format": "checkbox",
                    "propertyOrder": 1
                },
                "discretes": {
                    "type": "array",
                    "title": "Discrete inputs (read-only one-bit values)",
                    "propertyOrder": 10,
                    "_format": "table",
                    "items": {
                        "$ref": "#/definitions/reg_common"
                    },
                    "options": {
                        "disable_array_reorder": true
                    }
                },
                "coils": {
                    "type": "array",
                    "title": "Coils (read/write one-bit values)",
                    "propertyOrder": 20,
                    "_format": "table",
                    "items": {
                        "$ref": "#/definitions/reg_common"
                    },
                    "options": {
                        "disable_array_reorder": true
                    }
                },
                "inputs": {
                    "type": "array",
                    "title": "Input registers (read-only registers)",
                    "propertyOrder": 30,
                    "_format": "table",
                    "items": {
                        "$ref": "#/definitions/reg_format"
                    },
                    "options": {
                        "disable_array_reorder": true
                    }
                },
                "holdings": {
                    "type": "array",
                    "title": "Holding registers (read/write registers)",
                    "propertyOrder": 40,
                    "_format": "table",
                    "items": {
                        "$ref": "#/definitions/reg_format"
                    },
                    "options": {
                        "disable_array_reorder": true
                    }
                }
            },
            "options": {
                "disable_properties": true,
                "disable_collapse": true,
                "disable_edit_json": true
            }
        }
    },
    "required": ["debug", "modbus", "mqtt", "registers"],
    "options": {
        "disable_edit_json": true,
        "disable_properties": true,
        "disable_collapse": true
    },
